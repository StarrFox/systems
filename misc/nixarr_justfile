# show this list
default:
	just --list

# sync movies and tv shows
sync: sync-movies sync-tv

# sync tv shows
sync-tv:
	mullvad-exclude rsync --remove-source-files --recursive --progress /data_tv/ "starrnix:/big/media/TV Shows"

# sync movies
sync-movies:
	mullvad-exclude rsync --remove-source-files --recursive --progress /data/ "starrnix:/big/media/Movies"
